{
  "_comment": "VS Code Server Configuration for development team workspace customization",
  "settings": {
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.fontSize": 12,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "python.defaultInterpreterPath": "/home/devteam/venv/bin/python",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "go.gopath": "/home/devteam/go",
    "go.goroot": "/usr/local/go",
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "extensions.autoUpdate": true,
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vs-seti",
    "workbench.startupEditor": "welcomePage"
  },
  "extensions": [
    "ms-python.python",
    "golang.go",
    "ms-vscode.vscode-typescript-next",
    "ms-vscode.vscode-json",
    "redhat.vscode-yaml",
    "eamodio.gitlens",
    "mhutchie.git-graph",
    "ms-azuretools.vscode-docker",
    "ms-kubernetes-tools.vscode-kubernetes-tools",
    "esbenp.prettier-vscode",
    "bradlc.vscode-tailwindcss",
    "ms-vscode.vscode-css-peek",
    "ms-vscode.vscode-html-css-support",
    "ms-mssql.mssql",
    "mtxr.sqltools",
    "mtxr.sqltools-driver-pg",
    "mtxr.sqltools-driver-mysql",
    "ms-vscode.vscode-github-pullrequest",
    "ms-vsliveshare.vsliveshare",
    "gruntfuggly.todo-tree",
    "aaron-bond.better-comments",
    "ms-toolsai.jupyter",
    "ms-python.vscode-pylance",
    "hashicorp.terraform",
    "redhat.ansible",
    "humao.rest-client"
  ],
  "folders": [
    {
      "path": "/workspace"
    }
  ]
}
